<div class="container">

  <h1>These are your proposals</h1>
  <p>Manage your proposals here</p>

  <table class= "table table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Price</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @proposals.each do |proposal| %>
        <tr>
          <td><%= proposal.date %></td>
          <td><%= proposal.price %></td>
          <td><%= proposal.status %></td>
          <td><%= link_to 'Show', proposal_path(proposal) %> </td>
        <% unless current_user.pilot? %>
          <td><%= link_to 'Cancel', proposal_path(proposal), method: :delete, data: { confirm: 'Are you sure?' } %> </td>
          <td><%= link_to 'Add review', new_proposal_review_path(proposal) %> </td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
