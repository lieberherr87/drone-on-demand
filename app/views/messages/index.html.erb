<div class="container">
  <h1>Messages</h1>
  <p>Send message to <%= @conversation.recipient.first_name @conversation.recipient.last_name %></p>

  <div class=”ui segment”>
   <% @messages.each do |message| %>
    <% if message.body %>
     <% user = User.find(message.user_id) %>
     <div class=”item”>
      <div class=”content”>
       <div class=”header”><strong><%= user.first_name %></strong>     <%= message.message_time %></div>
        <div class=”list”>
         <div class=”item”>
          <i class=”right triangle icon”></i>
           <%= message.body %>
        </div>
      </div>
     </div>
   </div>
   <% end %>
  <% end %>
  </div>

  <%= simple_form_for [@conversation, @message] do |f| %>
    <%= f.input :body, autofocus: true %>
    <%= f.button :submit, "Send" %>
  <% end %>
</div>
