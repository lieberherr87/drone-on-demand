
<%= simple_form_for @profile, html: {multipart: true} do |f| %>
  <div class="form-inputs">

    <%= f.input :company_name, input_html: { :class => 'form-input' }, label_html: { :class => 'form-label' }%>
    <%= f.input :description, as: :text, input_html: { :class => 'form-input', rows: 4}, label_html: { :class => 'form-label' } %>
    <%= f.association :skills, as: :check_boxes, collection: Skill.all, input_html: { :class => 'form-input' }, label_html: { :class => 'form-label' } %>

    <div id="images">
      <%= f.simple_fields_for :images do |image| %>
        <%= render 'image_fields', f: image %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'add image', f, :images %>
      </div>
    </div>

    <div class="form-label">Videos</div>
    <div id="videos">
      <%= f.simple_fields_for :videos do |url| %>
        <%= render 'video_fields', f: url %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'add url', f, :videos %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'form-btn'%>
  </div>
<% end %>

