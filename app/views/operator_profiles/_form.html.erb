<%= simple_form_for @profile do |f| %>
<%= f.input :company_name %>
<%= f.input :description, as: :text, input_html: {rows: 4} %>
<%= f.collection_check_boxes :skills, [["piloting", 'Piloting'] ,["editing", 'Editing video footage'], ["color correction", "Color correction of footage"]], :first, :last %>
<%= f.button :submit, "Create your Profile" %>
<% end %>


<%= simple_form_for @image do |f| %>
<%= f.input :droneimages %>
<%= f.button :submit, "Upload images" %>
<% end %>
