<div class="container">
  <h1>Drone Operators</h1>
  <p>An overview of all our amazing drone services!</p>

  <table class="table table-hover">
    <thead>
    <th colspan="3"></th>
    </thead>
    <tbody>
        <% @operator_profiles.each do |profile| %>
      <tr>
        <td><%= profile.company_name %></td>
        <td><%= profile.description %></td>
        <td><%= profile.skills %></td>
        <td><%= link_to "Show", operator_profile_path(profile) %></td>
        <td><%= link_to "Edit", edit_operator_profile_path(profile) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
