<div class="container">
  <div class="row">
      <div class='col-xs-12 col-md-4'>
      <figure class="oprofile-box">
        <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/sample87.jpg" alt="sample87" />
      <figcaption>
        <%= image_tag @profile.user.avatar.url(:standard), class:"profile" %>
          <h2><span><%= @profile.company_name %></span></h2>
          <h3>Skills</h3>
        <% @profile.skills.each do |s| %>
          <ul>
            <li><p><%= s.name %></p></li>
          </ul>
        <% end %>
        <% if current_user.pilot? %>
          <%= link_to 'Edit Profile', edit_operator_profile_path %></p>
          <p><a href="javascript:history.back()">Go Back</a></p>
        <% else %>
          <p><a href="javascript:history.back()">Go Back</a></p>
        <% end %>
      </figcaption>
      </figure>
      </div>

    <div class='col-xs-12 col-md-8 '>
      <% if @profile.videos.first %>
      <div class="embed-container">
        <p><%= embed(@profile.videos.first.url) %></p>
      </div>
      <% end %>
      <% @profile.images.each do |p| %>
        <%= cl_image_tag p.image %>
      <% end %>
      <div class="description-box">
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
       <p><%= @profile.description %></p>
      </div>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>

$(document).scroll(function() {
    checkOffset();
});
function checkOffset() {
    if($('.oprofile-box').offset().top + $('.oprofile-box').height()
                                           >= $('#footer').offset().top - 5)
        $('.oprofile-box').css('position', 'absolute');
    if($(document).scrollTop() + window.innerHeight < $('#footer').offset().top)
        $('.oprofile-box').css('position', 'fixed'); // restore when you scroll up
}
  <% end %>
<% end %>


