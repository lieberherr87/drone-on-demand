<div class="container">
<div class="row">
    <div class='col-xs-12 col-md-4 footer-container'>
      <figure class="oprofile-box ">
        <% if !@profile.images.first.nil? %>
          <%= cl_image_tag @profile.images.first.image %>
        <% else %>
          <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/sample87.jpg" alt="sample87" />
        <% end %>
        <figcaption>
        <% if !@profile.user.avatar.url.nil? %>
          <%= cl_image_tag @profile.user.avatar.url(:standard), class:"profile" %>
        <% end %>
          <h2><span><%= @profile.company_name %></span></h2>
          <h3>Skills</h3>
          <% @profile.skills.each do |s| %>
          <ul>
            <li><p><%= s.name %></p></li>
          </ul>
          <% end %>
        <% if policy(@profile).update? %>
          <%= link_to 'Edit Profile', edit_operator_profiles_path %></p>
        <% end %>
          <p><a href="javascript:history.back()">Go Back</a></p>
        </figcaption>
      </figure>
    </div>

    <div class='col-xs-12 col-md-8 footer-container'>
      <% if @profile.videos.first %>
        <div class="embed-container">
          <p><%= embed(@profile.videos.first.url) %></p>
        </div>
      <% end %>

      <div class="description-box">
        <h3>About us</h3>
        <p><%= @profile.description %></p>
      </div>

      <div class="image-container footer-container">
        <% @profile.images.each do |p| %>
          <% if @profile.images %>
            <div class="col-xs-12 col-md-4">
              <%= link_to asset_path(p.image.url(:standard)), :class => "swipebox" do %>
                <%= cl_image_tag p.image.url(:standard), class: "gallerypictures" %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="review">
        <h3>Reviews</h3>
          <% @proposals.each do |proposal| %>
            <% unless proposal.review == nil %>
              <ul>Review by <%= User.find_by(id:proposal.request.user_id).first_name %> <%= User.find_by(id:proposal.request.user_id).last_name %>, created <%= proposal.review.created_at.strftime("%A %B %d or %a %e/%m") %>
              <li><%= proposal.review.content %></li>
              <li><%= proposal.review.rating %></li>
              </ul>
            <% end %>
          <% end %>
        </div>
      </div>
  </div>
</div>





