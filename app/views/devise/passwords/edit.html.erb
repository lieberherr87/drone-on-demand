<div class="container">
  <div class='col-xs-12 col-md-6 col-md-offset-3 footer-container form'>
    <h2>Change your password</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token, input_html: { :class => 'form-input' }, label_html: { :class => 'form-label' } %>

        <div class="form-inputs">
          <%= f.input :password, input_html: { :class => 'form-input' }, label_html: { :class => 'form-label' }, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, input_html: { :class => 'form-input' }, label_html: { :class => 'form-label' }, label: "Confirm your new password", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Change my password", class: 'form-btn' %>
        </div>
      <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
