<div class="container">
  <div class='row'>
    <div class='col-xs-12 col-md-6 col-md-offset-3 footer-container'>
      <div class="signup">
      <h2>Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

          <div class="form-inputs">
          <%= f.input :first_name, autofocus: true, input_html: { :class => 'su-input' }, label_html: { :class => 'su-label' } %>
          <%= f.input :last_name, input_html: { :class => 'su-input' }, label_html: { :class => 'su-label' } %>
          <%= f.input :email, required: true, input_html: { :class => 'su-input' }, label_html: { :class => 'su-label' } %>
          <%= f.input :address, input_html: { :class => 'su-input' }, label_html: { :class => 'su-label' } %>
          <%= f.input :avatar, input_html: { :class => 'su-input' }, label_html: { :class => 'su-label' } %>
          <%= f.input :avatar_cache, as: :hidden %>
          <%= f.input :pilot, input_html: { :class => 'su-input' }, label_html: { :class => 'su-label' } %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { :class => 'su-input' }, label_html: { :class => 'su-label' } %>
          <%= f.input :password_confirmation, required: true, input_html: { :class => 'su-input' }, label_html: { :class => 'su-label' } %>
          </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: 'btn-su-edit' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
