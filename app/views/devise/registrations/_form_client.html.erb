<h2>Sign up as a Client</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

    <div class="form-inputs">
    <%= f.input :first_name, autofocus: true, input_html: { :class => 'form-input' }, label_html: { :class => 'form-label' } %>
    <%= f.input :last_name, input_html: { :class => 'form-input' }, label_html: { :class => 'form-label' } %>
    <%= f.input :email, required: true, input_html: { :class => 'form-input' }, label_html: { :class => 'form-label' } %>
    <%= f.input :address, input_html: { :class => 'form-input' }, label_html: { :class => 'form-label' } %>
    <%= f.input :avatar, input_html: { :class => 'form-input' }, label_html: { :class => 'form-label' } %>
    <%= f.input :avatar_cache, as: :hidden %>
    <%= f.input :pilot, as: :hidden, input_html: { :value => "0", :class => 'form-input' }, label_html: { :class => 'form-label' } %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { :class => 'form-input' }, label_html: { :class => 'form-label' } %>
    <%= f.input :password_confirmation, required: true, input_html: { :class => 'form-input' }, label_html: { :class => 'form-label' } %>
    </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'form-btn' %>
  </div>
<% end %>
