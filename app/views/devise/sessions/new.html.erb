<div class="container">
  <div class='col-xs-12 col-md-6 col-md-offset-3 footer-container form'>
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, input_html: { :class => 'form-input' }, label_html: { :class => 'form-label' } %>
      <%= f.input :password, required: false, input_html: { :class => 'form-input' }, label_html: { :class => 'form-label' } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'form-btn' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
