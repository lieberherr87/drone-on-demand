<!-- How does it work? Customer -->

<span id="customer"></span>

<div class="banner2 lazy-child container-fluid" id='as-a-customer'>
  <div class="text-center padded features">
    <div class="row">
        <h2 class="subtitle fancy"><span>How it works</span></h2>
        <h3> As a client</h3>
      <div class="col-xs-12 col-md-4 divisions">
        <%= image_tag 'sign.png', class:'howtoimg' %>
        <h4><strong>Sign in</strong></h4>
        <p> Use your own account, make your drone experience better.</p>
      </div>
      <div class="col-xs-12 col-md-4 divisions">
        <%= image_tag 'drone.png', class:'howtoimg' %>
        <h4><strong>Make a request</strong></h4>
        <p>State the date and location of the job</p>
      </div>
      <div class="col-xs-12 col-md-4 divisions">
        <%= image_tag 'check.png', class:'howtoimg' %>
        <h4><strong>Choose best offer</strong></h4>
        <p> Choose a pilot's offer, and book!</p>
      </div>
    </div> <!-- /row -->
