      <% if !user_signed_in? %>
      <%= link_to 'Sign up as a client!', new_user_registration_path(as:"client"), class:"btn form-btn" %>
      <% end %>
    </div><!-- userlink -->
  </div> <!-- /text-center padded features -->
</div> <!-- /banner2 -->

