<div class="container">
<div class="form">
<div class='col-xs-12 col-md-6 col-md-offset-3 footer-container'>
  <h1>Add a Review </h1>

  <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <%= simple_form_for [@proposal, @review] do |f| %>
    <div class="field">
    <%= f.input :content, as: :text, input_html: { :class => 'form-input', rows: 4}, label_html: { :class => 'form-label' } %>
    </div>

     <div class="field">
      <%= f.label :rating, input_html: { :class => 'form-input', rows: 4}, label_html: { :class => 'form-label' } %>
      <%= f.select :rating, 0..5, input_html: { :class => 'form-input', rows: 4}, label_html: { :class => 'form-label' } %>
    </div>

    <div class="actions">
      <%= f.submit "add a review", class: 'form-btn' %>
    </div>

  <% end %>
</div>
</div>
</div>
